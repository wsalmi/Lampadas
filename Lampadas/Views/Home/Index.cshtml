@Html.Partial("_Home")
@section Scripts{
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>

    <script>
        var hubTest = $.connection.mainHub;
        var card = $('#TemplateCard').find('li').clone();

        hubTest.client.hello = function (nomeDoCara) {
            $('#DataHora').html(nomeDoCara);
        }

        hubTest.client.acender = function (lampada, seconds) {
            console.log(seconds);
            $('#lampada-' + lampada).addClass('lampada-on');
            $('#TemplateCard').append(card);
        }

        hubTest.client.apagar = function (lampada, seconds) {
            console.log(seconds);
            $('#lampada-' + lampada).removeClass('lampada-on');
            $('#TemplateCard').append(card);
            $('.segundos').html(seconds + 'ms');
        }

        $.connection.hub.start().done(function () {
        });

    </script>
}