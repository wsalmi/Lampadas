@{
    ViewBag.Title = "Log";
}
<style>
    * {
        color: white;
    }

    li.teste {
        background-color: yellowgreen;
        color: red;
    }
</style>

<ul id="log"></ul>

@section Scripts{
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="@Url.Content("~/signalr/hubs")"></script>

    <script>
        var hubTest = $.connection.mainHub;
        var card = $('#TemplateCard').find('li#second-child').clone();

        hubTest.client.acender = function (lampada, seconds) {
            $("#log").prepend("<li>Acendeu - Lampada: " + lampada + " -> " + seconds + "</li>");
        }

        hubTest.client.apagar = function (lampada, seconds) {
            $("#log").prepend("<li>Apagou - Lampada: " + lampada + " -> " + seconds + "</li>");
        }


        hubTest.client.testeAcender = function (lampada, seconds) {
            $("#log").prepend("<li class='teste'>Acendeu - Lampada: " + lampada + "</li>");
        }

        hubTest.client.testeApagar = function (lampada, seconds) {
            $("#log").prepend("<li class='teste'>Apagou - Lampada: " + lampada + "</li>");
        }

        $.connection.hub.stateChanged(function (s, e, c) {
            if (s.newState != 0)
                $.connection.hub.start();
        });

        $.connection.hub.start();
    </script>
}